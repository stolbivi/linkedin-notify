{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "jsx": "preserve",
    "target": "es2017",
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": [
      "chrome"
    ]
  }
}
